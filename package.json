{
  "name": "yurichan-ts",
  "version": "1.0.0",
  "description": "YuriBot from chat",
  "type": "module",
  "main": "./dist/index.js",
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run build"
    }
  },
  "scripts": {
    "start": "npm run build && node ./dist/index.js",
    "build": "rimraf ./build && npx tsc",
    "dev": "npx nodemon",
    "lint": "npx eslint ./src",
    "fix": "npx eslint ./src --fix",
    "prepare": "husky install"
  },
  "author": "Kirill Katelyanets",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "eslint": "^8.31.0",
    "husky": "^8.0.3",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.3",
    "rimraf": "^4.0.4",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "chalk": "^5.2.0",
    "chalk-template": "^0.5.0",
    "dotenv": "^16.0.3",
    "telegraf": "^4.11.2"
  }
}
