{
  "name": "yurichan-ts",
  "version": "0.1.2",
  "description": "YuriBot from chat",
  "type": "module",
  "main": "./dist/index.js",
  "scripts": {
    "start": "npm run update && npm run build && node ./dist/index.js",
    "update": "git pull && npm install",
    "build": "rimraf ./build && npx tsc",
    "dev": "npx nodemon",
    "lint": "npx eslint ./src",
    "fix": "npx eslint ./src --fix",
    "patch": "npm run commit && npm version patch && npm run git push",
    "minor": "npm run commit && npm version minor && npm run git push",
    "major": "npm run commit && npm version major && npm run git push",
    "commit": "git add . && git commit -m \"update\"",
    "push": "git push"
  },
  "author": "Kirill Katelyanets",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "eslint": "^8.31.0",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.3",
    "rimraf": "^4.0.4",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "chalk": "^5.2.0",
    "chalk-template": "^0.5.0",
    "dotenv": "^16.0.3",
    "telegraf": "^4.11.2"
  }
}
